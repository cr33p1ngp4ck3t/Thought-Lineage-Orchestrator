{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ThoughtSignature",
  "type": "object",
  "required": ["signature_id", "agent_id", "timestamp", "reasoning_type", "reasoning_chain", "conclusion", "confidence_score"],
  "properties": {
    "signature_id": {
      "type": "string",
      "description": "Unique identifier for this signature"
    },
    "agent_id": {
      "type": "string",
      "description": "ID of the agent that generated this signature"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO-8601 timestamp"
    },
    "reasoning_type": {
      "type": "string",
      "enum": ["analysis", "decision", "synthesis", "evaluation"],
      "description": "Category of reasoning performed"
    },
    "context": {
      "type": "object",
      "properties": {
        "parent_signatures": {
          "type": "array",
          "items": {"type": "string"},
          "description": "UUIDs of parent signatures this depends on"
        },
        "input_data": {
          "type": "object",
          "description": "Input data for this reasoning step"
        },
        "constraints": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Constraints considered during reasoning"
        }
      }
    },
    "reasoning_chain": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["step", "thought", "confidence"],
        "properties": {
          "step": {
            "type": "integer",
            "description": "Step number in the reasoning sequence"
          },
          "thought": {
            "type": "string",
            "description": "The reasoning text for this step"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Confidence level for this step"
          },
          "evidence": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Supporting evidence"
          },
          "dependencies": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Dependencies on previous steps"
          }
        }
      }
    },
    "conclusion": {
      "type": "string",
      "description": "Final decision or output"
    },
    "confidence_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Overall confidence in the conclusion"
    },
    "alternative_paths": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "reasoning": {
            "type": "string",
            "description": "Alternative approach considered"
          },
          "why_rejected": {
            "type": "string",
            "description": "Reason for not choosing this path"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          }
        }
      }
    }
  }
}
